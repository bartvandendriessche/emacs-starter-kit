/***********************************************************
 * Hook implementations
 ***********************************************************/

/**
 * Implementation of hook_info
 */
function ${1:`(sacha/drupal-module-name)`}_info() {
  return array(
    '${1:`(sacha/drupal-module-name)`}' => array(
      'name' => t('${2:title}'),
      'module' => '${1:`(sacha/drupal-module-name)`}',
      'description' => t('Manage the ${2:title} module'),
    )
  );
}

/**
 * Implementation of hook_help
 */
function ${1:`(sacha/drupal-module-name)`}_help($section) {
  switch ($section) {
  }
}

/**
 * Implementation of hook_menu
 */
function ${1:`(sacha/drupal-module-name)`}_menu($may_cache) {
  $items = array();
  if ($may_cache) {
    $items[] = array(
      'path' => 'admin/settings/${1:`(sacha/drupal-module-name)`}',
      'title' => t('${2:title}'),
      'description' => t('manage the ${2:title} module'),
      'callback' => 'drupal_get_form',
      'callback arguments' => '{$1:`(sacha/drupal-module-name)`}_settings',
      'access' => user_access('administer ${1:`(sacha/drupal-module-name)`}'),
      'type' => MENU_NORMAL_ITEM,
    );
  } else {
  }
  return $items;
}

/**
 * Implementation of hook_perm
 */
function ${1:`(sacha/drupal-module-name)`}_perm() {
  return array('administer ${1:`(sacha/drupal-module-name)`}');
}


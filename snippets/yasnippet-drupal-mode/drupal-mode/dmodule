/***********************************************************
 * Blocks and forms
 ***********************************************************/
 
/**
 * Implementation of hook_block
 */
function ${1:`(sacha/drupal-module-name)`}_block($op = 'list', $delta = 0, $edit = array()) {
  switch ($op) {
    case 'list':
      break;
    case 'configure':
      break;
    case 'save':
      break;
    case 'view':
      break;
  }
}

function ${1:`(sacha/drupal-module-name)`}_settings() {
  if (!user_access('administer ${1:`(sacha/drupal-module-name)`}')) {
    drupal_access_denied();
    return;
  }
  $form = array();
  return system_settings_form($form);
}

